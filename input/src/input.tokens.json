{
  "input": {
    "tokenset": "set-input",
    "background": {
      "type": "color",
      "value": "rgba(0,0,0,{core.opacity.default})"
    },
    "padding": {
      "horizontal": {
        "type": "spacing",
        "value": "{core.spacing.6}"
      },
      "vertical": {
        "type": "spacing",
        "value": "{core.spacing.6}"
      }
    },
    "border": {
      "radius": {
        "type": "borderRadius",
        "value": "0.25rem"
      },
      "color": {
        "type": "color",
        "value": "{core.color.black}"
      },
      "width": {
        "type": "sizing",
        "value": "1px"
      }
    },
    "font": {
      "weight": {
        "type": "fontWeights",
        "value": "{core.font.weight.normal}"
      },
      "family": {
        "type": "fontFamilies",
        "value": "{core.font.family}"
      }
    },
    "letter": {
      "spacing": {
        "type": "letterSpacings",
        "value": "0.01rem"
      }
    },
    "disabled": {
      "background": {
        "type": "color",
        "value": "{semantic.color.disabled.background}"
      },
      "color": {
        "type": "color",
        "value": "{semantic.color.disabled.color}"
      }
    },
    "focus": {
      "border": {
        "color": {
          "type": "color",
          "value": "{semantic.color.primary.dark}"
        }
      }
    },
    "hover": {
      "color": {
        "type": "color",
        "value": "rgba(0,0,0, {core.opacity.hover})"
      }
    },
    "help-text": {
      "color": {
        "type": "color",
        "value": "{core.color.gray.dark}"
      }
    },
    "label": {
      "color": {
        "type": "color",
        "value": "{core.color.gray.dark}"
      }
    }
  }
}