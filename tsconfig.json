    "target": "ESNext",
    "allowJs": true,
    "allowNonTsExtensions": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "reactNamespace": "React",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "~/*": ["*"],
      "@divriots/starter-sass/*": ["*"]
    }
  }
}